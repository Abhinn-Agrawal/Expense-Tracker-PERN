generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  incomes   Income[]
  expenses  Expense[]
  createdAt DateTime @default(now())
}

model Income {
  id          Int      @id @default(autoincrement())
  title       String
  amount      Int
  date        DateTime
  category    String
  description String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Expense {
  id          Int      @id @default(autoincrement())
  title       String
  amount      Int
  date        DateTime
  category    String
  description String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}